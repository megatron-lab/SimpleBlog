<%- include("partials/header") %>
<div class="ui main text container">
    <div class="ui huge header"><%=blog.title%></div>
    <div class="ui top attached segment">
        <div class="item">
            <img class="ui centered rounded image" src="<%= blog.image %>">
            <div class="content">
                <span><%=blog["dateCreated"].toDateString()%></span>
            </div>
            <div class="description">
                <!-- the - takes whatever blog.body returns and evaluates it. Lets user type html and style the blog. Downside is that user can also type javascript so need to sanitize. -->
                <p><%- blog.body %></p>
            </div>
            <a class="ui orange basic button" href="/blogs/<%= blog._id %>/edit">Edit</a>
            <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                <button class="ui red basic button">Delete</button>
            </form>
        </div>
    </div>
</div>
<%- include("partials/footer") %>